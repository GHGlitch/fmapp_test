        <script><![CDATA[// Creating an order via the interceptor
function sendToOrderInterceptor(){
	var reservationData = {
		"id":current.sys_id.toString()
	};
	gs.getSession().putClientData('fm_reservation', JSON.stringify(reservationData));
	
	if(gs.getUser().hasRole("x_lsmcb_fm.fm_room_reservation_coordinator") || gs.getUser().hasRole("x_lsmcb_fm.fm_facilities_order_coordinator")) {
		action.setRedirectURL('wizard_view.do?sysparm_parent=' + gs.getProperty('x_lsmcb_fm.order_interceptor_coordinator'));
	} else {
		action.setRedirectURL('wizard_view.do?sysparm_parent=' + gs.getProperty('x_lsmcb_fm.order_interceptor_end_user'));
	}
}
sendToOrderInterceptor();]]></script>
